@using WebShopJewel.Pages.Shared.Components.LoginMenu;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <environment names="Development">
            @await Component.InvokeAsync(nameof(FakeLoginMenu))
        </environment>
        <nav class="navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/SearchProduct/Index">Search</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/ShoppingCartPage/Index">Cart</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>